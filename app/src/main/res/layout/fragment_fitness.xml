<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    tools:context=".fitness">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goalDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="Calories Goal:"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/goalCalorie"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-smallcaps"
                    android:paddingLeft="5dp"
                    android:paddingTop="50dp"
                    android:paddingBottom="10dp"
                    android:text="2500"
                    android:textAlignment="center"
                    android:textColor="#009688"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/calorieCount"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="132dp"
                    android:layout_height="131dp"
                    android:layout_weight="1"
                    android:max="100"
                    android:paddingLeft="70dp"
                    android:paddingTop="50dp"
                    android:paddingRight="70dp"
                    android:paddingBottom="50dp"
                    android:progress="69"
                    android:progressDrawable="@drawable/circle" />
            </LinearLayout>

            <TextView
                android:id="@+id/currentDisplay"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:paddingLeft="5dp"
                android:text="Calories Remaining"
                android:textColor="#000000"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalCals"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="2500"
                    android:textAlignment="center"
                    android:textColor="#009688"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/foodCalorie"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="-1000"
                    android:textAlignment="center"
                    android:textColor="#009688"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exerciseCalorie"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="+500"
                    android:textAlignment="center"
                    android:textColor="#009688"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/remainingCalorie"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="2000"
                    android:textAlignment="center"
                    android:textColor="#009688"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/totalCals"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Goal"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/foodCalorie"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Food"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exerciseCalorie"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Exercise"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/remainingCalorie"
                    android:layout_width="199dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#CDDC39"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Remaining"
                    android:textAlignment="center"
                    android:textColor="#FF5722"
                    android:textColorHighlight="#4CAF50"
                    android:textColorLink="#00BCD4"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="10dp"
                android:text="Exercise"
                android:textColor="#000000"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/exerciseList"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:paddingLeft="5dp"
                android:paddingTop="10dp" />

            <Button
                android:id="@+id/addExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="#B94C58"
                android:text="Add Exercise" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>